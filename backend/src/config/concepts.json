{
    "relationships": [
        {
            "source": "merchantInfo",
            "target": "terminalRelationInfo",
            "path": "merchantInfo.merchantId -> merchantRelationInfo.merchantId -> terminalRelationInfo.relationId",
            "description": "Primary path to link merchants to terminal IDs (deviceId in Mongo)."
        }
    ],
    "aliases": {
        "terminalId": "deviceId",
        "revenue": "transactionActionHistoryInfo.amount",
        "volume": "transactionActionHistoryInfo.amount"
    },
    "guardrails": {
        "sql": {
            "avoid": [
                "deviceIdentInfo"
            ],
            "must_use": [
                "merchantRelationInfo",
                "terminalRelationInfo"
            ]
        },
        "mongo": {
            "primary_transactions": "transactionActionHistoryInfo",
            "avoid": [
                "merchantSummaryInfo"
            ]
        }
    }
}